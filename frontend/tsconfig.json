{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "rootDir": ".",
    "jsx": "react-jsx",
    "module": "commonjs",
    // "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "noEmit": true
  },
  "include": [
    "src"
, "@types"  ],
  "typeRoots": [
    // "./node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ]
}
